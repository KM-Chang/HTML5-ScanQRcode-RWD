<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>試驗教室報到系統 - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/MyTaiation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EtestSingQR.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("HeadCss", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-MybgColor navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                @if (ViewData["Title"]?.ToString() == "登入")
                {
                    <a class="navbar-brand navbar-brandAnim" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-check2-square"></i> <b>試驗教室報到系統</b></a>
                }
                else{
                    <a class="navbar-brand"><i class="bi bi-check2-square"></i> <b>試驗教室報到系統</b></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ScanQR" asp-action="NowDetList" asp-route-sLotID="@(ViewData["sLotID"])"><b>未報到名單</b></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ScanQR" asp-action="ToDayDetList" asp-route-sLotID="@(ViewData["sLotID"])"><b>場次明細</b></a>
                            </li>
                        </ul>
                        <div class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-fill"></i> 登出
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-question-circle-fill"></i> 確認登出？</a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            <span>
            &copy; 2022 - Chang kai-min &nbsp;&nbsp;v1.0.0
            </span>
        </div>
    </footer>

    @Html.AntiForgeryToken()
</body>
</html>
